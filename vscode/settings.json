{
    // font
    "editor.fontFamily": "Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 12,
    "editor.lineHeight": 14,

    // coding
    "editor.acceptSuggestionOnEnter": "off",
    "editor.autoClosingBrackets": "beforeWhitespace",
    "editor.hover.delay": 300,
    "editor.tabCompletion": "on",

    "editor.copyWithSyntaxHighlighting": false,
    "editor.links": false,
    "editor.wordWrap": "on",
    "editor.minimap.enabled": false,
    "editor.cursorBlinking": "solid", // 点滅させると煩わしい
    "editor.suggest.localityBonus": true,

    "diffEditor.renderSideBySide": false,

    // vim
    "vim.useSystemClipboard": true,
    "vim.easymotion": true,
    "vim.easymotionKeys": "hklyuiopnmqwertzxcvbasdgjf",
    "vim.leader": "<space>",
    "vim.useCtrlKeys": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "c"],
            "commands": [{"command": "workbench.action.showCommands"}]
        },
        {
            "before": ["<leader>", "r"],
            "commands": [{"command": "workbench.action.openRecent"}]
        },
        {
            "before": ["<leader>", "s"],
            "commands": [{"command": "workbench.action.gotoSymbol"}]
        },
        // undo/redoはvscodeの機能を利用する
        {
            "before": ["u"],
            "commands": [{"command": "undo" }]
        },
        {
            "before": [ "<C-r>" ],
            "commands": [{"command": "redo" }]
        },
        // indent
        {
            "before": [ ">" ],
            "commands": [ "editor.action.indentLines" ]
        },
        {
            "before": [ "<" ],
            "commands": [ "editor.action.outdentLines" ]
        },
        {
            "before": ["<leader>", "m"],
             "commands": [ "bookmarks.toggle" ]
        },
        {
            "before": ["<leader>", "b"],
            "commands": [ "bookmarks.list" ]
        },
    ],

    // go
    "go.autocompleteUnimportedPackages": true,
    "go.coverOnTestPackage": false,
    "go.formatTool": "goimports", // goreturnは使わない
    "[go]": {
        "editor.insertSpaces": false,
        "editor.formatOnSave": true
    },

    // rest
    "[restructuredtext]": {
        "editor.fontFamily": "Ricty, Menlo, Monaco, 'Courier New', monospace",
        "editor.fontSize": 14,
    },


    // terminal
    "terminal.integrated.shell.osx": "/bin/zsh",

    "telemetry.enableTelemetry": false, // dataを送信しない
    "telemetry.enableCrashReporter": false,

    "files.trimTrailingWhitespace": true,

    // workbench
    "workbench.colorTheme": "Solarized Dark",
    "workbench.activityBar.visible": false,
    // themeのcomponentsごとの設定
    "workbench.colorCustomizations": {
        // diffの追加箇所, 明るくてみずらかった
        "diffEditor.insertedTextBackground": "#163800",
    },
    "window.zoomLevel": 0,


    // latex
    "latex-workshop.latex.tools": [
        {
            "command": "platex",
            "args": [
                "-synctex=1",
                "-jobname=\"%DOCFILE%\"",
                "-kanji=utf8",
                "-guess-input-enc",
                "%DOCFILE%.tex"
            ],
            "name": "Step 1: platex"
        },
        {
            "command": "platex",
            "args": [
                "-synctex=1",
                "-jobname=\"%DOCFILE%\"",
                "-kanji=utf8",
                "-guess-input-enc",
                "%DOCFILE%.tex"
            ],
            "name": "Step 2: platex"
        },
        {
            "command": "dvipdfmx",
            "args": [
                "%DOCFILE%"
            ],
            "name": "Step 3: dvipdfmx"
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "toolchain",
            "tools": [
                "Step 1: platex",
                "Step 2: platex",
                "Step 3: dvipdfmx",
            ]
        }
    ],

    "latex-workshop.view.pdf.viewer": "tab",
    "editor.renderControlCharacters": true,
    "workbench.editor.enablePreview": false,
    "workbench.startupEditor": "newUntitledFile",
    "extensions.ignoreRecommendations": false,

    // spell check
    "cSpell.enabledLanguageIds": [
        "asciidoc",
        "go",
        "html",
        "javascript",
        "json",
        "latex",
        "markdown",
        "plaintext",
        "restructuredtext",
        "text",
        "yml"
    ],
    "cSpell.ignorePaths": [
        "**/package-lock.json",
        "**/node_modules/**",
        "**/vscode-extension/**",
        "**/.git/**",
        ".vscode",
        "typings",
        "**/vendor/**",
    ],
    // http://takeai.silverpigeon.jp/code-spell-checker-for-visual-studio-code-green-underline-japanese/
    "cSpell.ignoreRegExpList": [
        "[ａ-ｚぁ-んァ-ヶ亜-熙纊-黑]+"
    ],
    "cSpell.languageSettings": [
        { "languageId": "go",
            "allowCompoundWords": true,
            "dictionaries": ["go"]
        },
    ],
    "window.title": "${activeEditorLong}",

    // Allow navigation look for bookmarks in all files in the project, instead of only the current
    "bookmarks.navigateThroughAllFiles": true,
    "cSpell.userWords": [
        "isomorphicgo"
    ],

    "files.associations": {"*.tmpl": "html"},
}