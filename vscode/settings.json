{
    // font
    "editor.fontFamily": "Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 12,
    "editor.lineHeight": 14,

    // coding
    "editor.acceptSuggestionOnEnter": "off",
    "editor.autoClosingBrackets": "beforeWhitespace",
    "editor.hover.delay": 300,
    "editor.tabCompletion": "on",

    "editor.copyWithSyntaxHighlighting": false,
    "editor.links": false,
    "editor.wordWrap": "on",
    "editor.minimap.enabled": false,
    "editor.cursorBlinking": "solid", // 点滅させると煩わしい
    "editor.suggest.localityBonus": true,
    "editor.parameterHints.enabled": false,

    "diffEditor.renderSideBySide": false,

    // vim
    "vim.useSystemClipboard": true,
    "vim.easymotion": true,
    "vim.easymotionKeys": "hklyuiopnmqwertzxcvbasdgjf",
    "vim.leader": "<space>",
    "vim.useCtrlKeys": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "c"],
            "commands": [{"command": "workbench.action.showCommands"}]
        },
        {
            "before": ["<leader>", "r"],
            "commands": [{"command": "workbench.action.openRecent"}]
        },
        {
            "before": ["<leader>", "s"],
            "commands": [{"command": "workbench.action.gotoSymbol"}]
        },
        // undo/redoはvscodeの機能を利用する
        {
            "before": ["u"],
            "commands": [{"command": "undo" }]
        },
        {
            "before": [ "<C-r>" ],
            "commands": [{"command": "redo" }]
        },
        // indent
        {
            "before": [ ">" ],
            "commands": [ "editor.action.indentLines" ]
        },
        {
            "before": [ "<" ],
            "commands": [ "editor.action.outdentLines" ]
        },
        {
            "before": ["<leader>", "m"],
             "commands": [ "bookmarks.toggle" ]
        },
        {
            "before": ["<leader>", "b"],
            "commands": [ "bookmarks.list" ]
        },
    ],

    // go
    "go.autocompleteUnimportedPackages": true,
    "go.coverOnTestPackage": false,
    "go.formatTool": "goimports", //gofmt, goimports, goreturns, goformat, goimportsはmodule下で利用できない?
    "go.formatFlags": ["-w"],
    "go.installDependenciesWhenBuilding": false,
    "go.inferGopath": false,
    "go.lintTool": "golangci-lint",
    "go.lintFlags": [
        "--enable=misspell",
        "--fast",
        "--tests", // exporter関連でtestもみないとunused扱いされる
        "--disable=scopelint",  // testのtc参照だけ見逃してほしい
    ],
    "go.toolsEnvVars": {
        // "GO111MODULE": "auto",
    },
    "[go]": {
        "editor.insertSpaces": false,
        "editor.tabSize": 4,
        "editor.detectIndentation": false,  // templateやsqlのindent次第で時々2になることを防ぐ
        "editor.formatOnSave": true,
        "editor.formatOnSaveTimeout": 30000, // timeoutするとimportされない
    },

    // experimental
    "go.useLanguageServer": true,
    "go.alternateTools": {
        "go-langserver": "bingo",  // bingo, golsp
    },
    "go.languageServerExperimentalFeatures": {
        "format": true,
        "autoComplete": true
    },
    "go.languageServerFlags": [
        "-format-style", "goimports", // goimports, gofmt
        "-logfile", "/tmp/bingo.log",
        "--cache-style=none",  // https://github.com/saibing/bingo/issues/104
        // "-trace",
        // "-enable-global-cache", // go.modを更新しないとcacheは新しくならない
    ],

    // python
    "python.pythonPath": "~/.pyenv/shims/python",

    // rest
    "[restructuredtext]": {
        "editor.fontFamily": "Ricty, Menlo, Monaco, 'Courier New', monospace",
        "editor.fontSize": 14,
    },

    // html
    "[html]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.formatOnSave": true,
        "editor.detectIndentation": false,
    },

    // terminal
    "terminal.integrated.shell.osx": "/bin/zsh",

    "telemetry.enableTelemetry": false, // dataを送信しない
    "telemetry.enableCrashReporter": false,

    "files.trimTrailingWhitespace": true,

    // workbench
    "workbench.colorTheme": "Solarized Dark",
    "workbench.activityBar.visible": false,
    // themeのcomponentsごとの設定
    "workbench.colorCustomizations": {
        // diffの追加箇所, 明るくてみずらかった
        "diffEditor.insertedTextBackground": "#163800",
    },
    "window.zoomLevel": 0,


    // latex
    "latex-workshop.latex.tools": [
        {
            "command": "platex",
            "args": [
                "-synctex=1",
                "-jobname=\"%DOCFILE%\"",
                "-kanji=utf8",
                "-guess-input-enc",
                "%DOCFILE%.tex"
            ],
            "name": "Step 1: platex"
        },
        {
            "command": "platex",
            "args": [
                "-synctex=1",
                "-jobname=\"%DOCFILE%\"",
                "-kanji=utf8",
                "-guess-input-enc",
                "%DOCFILE%.tex"
            ],
            "name": "Step 2: platex"
        },
        {
            "command": "dvipdfmx",
            "args": [
                "%DOCFILE%"
            ],
            "name": "Step 3: dvipdfmx"
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "toolchain",
            "tools": [
                "Step 1: platex",
                "Step 2: platex",
                "Step 3: dvipdfmx",
            ]
        }
    ],

    "latex-workshop.view.pdf.viewer": "tab",
    "editor.renderControlCharacters": true,
    "workbench.editor.enablePreview": false,
    "workbench.startupEditor": "newUntitledFile",
    "extensions.ignoreRecommendations": false,

    // spell check
    "cSpell.enabled": false,
    "cSpell.enabledLanguageIds": [
        "asciidoc",
        "go",
        "html",
        "javascript",
        "json",
        "latex",
        "markdown",
        "plaintext",
        "text",
        "yml"
    ],
    "cSpell.ignorePaths": [
        "**/package-lock.json",
        "**/node_modules/**",
        "**/vscode-extension/**",
        "**/.git/**",
        ".vscode",
        "typings",
        "**/vendor/**",
        "/usr/local/go/**",
        ".envrc",
    ],
    // http://takeai.silverpigeon.jp/code-spell-checker-for-visual-studio-code-green-underline-japanese/
    "cSpell.ignoreRegExpList": [
        "[ａ-ｚぁ-んァ-ヶ亜-熙纊-黑]+"
    ],
    "cSpell.languageSettings": [
        { "languageId": "go",
            "allowCompoundWords": true,
            "dictionaries": ["go"]
        },
    ],
    "window.title": "${activeEditorLong}",

    "cSpell.userWords": [
        "backend",
        "codeconv",
        "cognito",
        "csrf",
        "davecgh",
        "deps",
        "dotenv",
        "fdump",
        "firestore",
        "gobot",
        "gopherjs",
        "grpc",
        "handson",
        "hpdev",
        "isomorphicgo",
        "julienschmidt",
        "kuberetes",
        "logrus",
        "name",
        "negroni",
        "nlopes",
        "noindex",
        "notificator",
        "oauth",
        "payload",
        "repls",
        "repo",
        "sdump",
        "token",
        "unregister",
        "upgrader",
        "ymgyt"
    ],

    "files.associations": {
        "*.tmpl": "html"
    },
    // gitignore対象を検索対象からはずす
    "search.useGlobalIgnoreFiles": true,
    "search.location": "panel",
}